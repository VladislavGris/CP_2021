<UserControl x:Class="CP_2021.Views.UserControls.DBTestUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ie="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:vm="clr-namespace:CP_2021.ViewModels"
             xmlns:convert="clr-namespace:CP_2021.Infrastructure.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <GridLength x:Key="TreeToggleWidth">30</GridLength>
        <convert:LevelConverter x:Key="LevelSpaceConverter" LevelWidth="{StaticResource TreeToggleWidth}"/>
        <convert:VisibilityConverter x:Key="TreeToggleConverter"/>
    </UserControl.Resources>
    <UserControl.DataContext>
        <vm:DBTestUserControlViewModel/>
    </UserControl.DataContext>
    <StackPanel Background="SkyBlue">
        <Grid Height="100" Background="#FF31577E">
        </Grid>
        <DataGrid AutoGenerateColumns="False"
                  Name="Grid"
                  CanUserAddRows="False"
                  AlternationCount="2"
                  AlternatingRowBackground="LightGray"
                  ItemsSource="{Binding Model.FlatModel}"
                  Margin="5"
                  CanUserReorderColumns="False">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Имя" 
                                        CanUserSort="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="{Binding Level, Converter={StaticResource LevelSpaceConverter}}"/>
                                    <ColumnDefinition Width="{StaticResource TreeToggleWidth}"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Expander Grid.Column="1"
                                          IsExpanded="{Binding IsExpanded, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Visibility="{Binding HasChildren, Converter={StaticResource TreeToggleConverter}}" 
                                          Margin="-55 -10 -10 -10"
                                          Background="Transparent"
                                          Height="48"/>
                                <TextBox  Text="{Binding Name}" Grid.Column="2" />
                            </Grid>

                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <!--<DataGridTextColumn Header="Имя" Binding="{Binding Name}" CanUserSort="False"/>-->
                <DataGridTextColumn Header="Должность" Binding="{Binding Position}" CanUserSort="False" />
            </DataGrid.Columns>
        </DataGrid>
    </StackPanel>
</UserControl>
