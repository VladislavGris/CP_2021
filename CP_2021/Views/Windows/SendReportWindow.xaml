<Window x:Class="CP_2021.Views.Windows.SendReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CP_2021.Views.Windows"
        xmlns:vm="clr-namespace:CP_2021.ViewModels"
        xmlns:commands="clr-namespace:CP_2021.Infrastructure.Commands"
        mc:Ignorable="d"
        Title="SendReportWindow" Height="370" Width="300" WindowStyle="None"
        ResizeMode="NoResize"
        Style="{StaticResource WindowStyle}"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:SendReportViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBlock Foreground="White"
                       Text="Отправить отчет"
                       HorizontalAlignment="Center"
                       FontSize="20"/>
            <Button Margin="0 2 2 0"
                        WindowChrome.IsHitTestVisibleInChrome="True"
                        Height="30"
                        Width="20"
                        Style="{StaticResource ExitButton}"
                    HorizontalAlignment="Right"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}">
                <Button.Command>
                    <commands:CloseWindowCommand/>
                </Button.Command>
                <Button.Content>
                    <Image>
                        <Image.Source>
                            <BitmapImage UriSource="/Resources/Images/close.png"/>
                        </Image.Source>
                    </Image>
                </Button.Content>
            </Button>
        </Grid>
        <StackPanel Background="{StaticResource BackgroundBrush}"
                    Grid.Row="1"
                    Margin="10">
            <Label Content="Задача"
                       Style="{StaticResource LabelStyle}"></Label>
            <TextBlock Text="{Binding Report.Task.Header}"
                       FontSize="18"
                       Margin="10 0 0 0"
                       Foreground="White"
                       TextWrapping="Wrap"/>
            <Label Content="Получатель отчета"
                       Style="{StaticResource LabelStyle}"></Label>
            <TextBlock Text="{Binding Report.To, Converter={StaticResource ExecutorConverter}}"
                       FontSize="18"
                       Margin="10 0 0 0"
                       Foreground="White"
                       TextWrapping="Wrap"/>
            <Label Content="Содержание отчета"
                       Style="{StaticResource LabelStyle}"></Label>
            <TextBox FontSize="18"
                     Background="Transparent"
                     BorderBrush="White"
                     Foreground="White"
                     Text="{Binding Report.Description, UpdateSourceTrigger=PropertyChanged}"
                     Height="125"
                     TextWrapping="Wrap"/>
            <Grid>
                <Button Content="Подтвердить"
                    Style="{StaticResource RegisterButton}"
                    Margin="0 10 0 0"
                    HorizontalAlignment="Left"
                        Width="120"
                        Command="{Binding SubmitCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}"/>
                <Button Content="Отмена"
                    Style="{StaticResource RegisterButton}"
                    Margin="0 10 0 0"
                    HorizontalAlignment="Right"
                        Width="120"
                        CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}">
                    <Button.Command>
                        <commands:CloseWindowCommand/>
                    </Button.Command>

                </Button>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
